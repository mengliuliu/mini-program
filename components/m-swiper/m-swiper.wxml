<!--components/m-swiper/m-swiper.wxml-->
<swiper class="swiper"
        circular
        autoplay
        interval='3000'
        duration='300'
        indicator-dots
        indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="*this">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix" style="width: 100%"></image>
    </swiper-item>
  </block>
</swiper>
